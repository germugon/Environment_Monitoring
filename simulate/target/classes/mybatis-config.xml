<?xml version="1.0" encoding="UTF-8"?>    
<!DOCTYPE configuration    
	PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN"    
	"http://ibatis.apache.org/dtd/ibatis-3-config.dtd">    

  <configuration>  
  
  	<settings>  
    	<!-- 不启用延迟加载 -->  
        <setting name="lazyLoadingEnabled" value="false"/>  
    </settings>  
             
    <!-- 为bean type起别名  -->  
    <typeAliases>  
    	<typeAlias type="com.model.ScheduleJob" alias="scheduleJob"/>     
    </typeAliases>  
              
    <!-- 配置orm映射 -->  
    <mappers>  
    	<mapper resource="mappers/ScheduleJobMapper.xml"/>      
    </mappers>  
    
  </configuration>  